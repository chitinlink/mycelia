{
  "type": "object",
  "required": [ "name", "aliases", "reason" ],
  "additionalProperties": false,
  "properties": {
    "name": { "type": "string", "pattern": "^[a-z0-9_]+$" },
    "aliases": {
      "type": "array",
      "items": { "type": "string", "minimum": 1, "pattern": "^[a-z0-9_]+$" }
    },
    "handles": {
      "type": "array",
      "items": {
        "type": "object",
        "minimum": 0,
        "required": ["type", "handle"],
        "additionalProperties": false,
        "properties": {
          "type": { "type": "string", "enum": ["url", "regex", "twitter", "tumblr"] },
          "handle": { "type": "string" }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "url" } } },
            "then": { "properties": { "handle": { "type": "string", "format": "uri" } } }
          },
          {
            "if": { "properties": { "type": { "const": "regex" } } },
            "then": { "properties": { "handle": { "type": "string", "format": "regex" } } }
          },
          {
            "if": { "properties": { "type": { "const": "twitter" } } },
            "then": { "properties": { "handle": { "type": "string", "pattern": "^@[a-zA-Z_0-9]+$" } } }
          },
          {
            "if": { "properties": { "type": { "const": "tumblr" } } },
            "then": { "properties": { "handle": { "type": "string", "pattern": "^[a-zA-Z0-9_-]+$" } } }
          }
        ]
      }
    },
    "reason": {
      "type": "object",
      "additionalProperties": false,
      "required": ["short", "long"],
      "properties": {
        "short": { "type": "string", "maxLength": 100 },
        "long": { "type": "string" }
      }
    }
  }
}
