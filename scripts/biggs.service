[Unit]
Description=Biggs (Discord bot)

[Service]
Type=simple
WorkingDirectory=/opt/biggs/
ExecStart=/bin/bash -c 'python3 ./main.py'
Restart=on-failure
# Security
PrivateUsers=true
ProtectHome=true
ProtectSystem=full
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=true

[Install]
WantedBy=multi-user.target
